<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog 
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:n0="http://www.oracle.com/xml/ns/dbchangelog-ext" 
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

   
    <!-- Include all changesets from subfolders -->
    <includeAll path="database/table" relativeToChangelogFile="true"/>
    <includeAll path="database/package_spec" relativeToChangelogFile="true"/>
    <includeAll path="database/package_body" relativeToChangelogFile="true"/>
     <!-- Include specific file for APEX installation -->
    <include file="apex/apex_install.xml" relativeToChangelogFile="true"/>    

</databaseChangeLog>